@implements IDisposable

@using Microsoft.AspNetCore.Components.Authorization
@using Volonterko.Domain.Constants

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Volonterko</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Naslovna
            </NavLink>
        </div>

        <!-- Public actions are always accessible -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="actions">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Javne akcije
            </NavLink>
        </div>

        <AuthorizeView Context="auth">
            <Authorized>
                @{
                    var isOrg = auth.User.IsInRole(Roles.Organization);
                    var isAdmin = auth.User.IsInRole(Roles.Admin);
                }

                @if (isOrg)
                {
                    <!-- ✅ NEW: organization profile -->
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="org/profile">
                            <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Profil organizacije
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="org/actions">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Moje akcije
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="org/actions/new">
                            <span class="bi bi-plus-square-nav-menu" aria-hidden="true"></span> Nova akcija
                        </NavLink>
                    </div>
                }
                else
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="me/profile">
                            <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Moj profil
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="me/signups">
                            <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span> Moje prijave
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="org/request">
                            <span class="bi bi-building-nav-menu" aria-hidden="true"></span> Postani organizacija
                        </NavLink>
                    </div>
                }

                @if (isAdmin)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/orgs">
                            <span class="bi bi-shield-lock-nav-menu" aria-hidden="true"></span> Admin: Organizacije
                        </NavLink>
                    </div>
                }

                <!-- Identity: account + logout -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @auth.User.Identity?.Name
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post" @formname="LogoutForm">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Odjava
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized Context="anon">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Registracija
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Prijava
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
