@page "/org/actions"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Volonterko.Data
@using Volonterko.Domain.Constants
@using Volonterko.Domain.Enums
@using Volonterko.Domain.Entities

@inject ApplicationDbContext Db
@inject UserManager<ApplicationUser> UserManager
@inject Volonterko.Services.OrganizationService OrgService
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = Roles.Organization)]

<h3>Moje akcije</h3>

@if (_loading)
{
    <p>Učitavanje...</p>
}
else if (_org is null)
{
    <div class="alert alert-warning">Nema organizacije vezane uz ovaj račun.</div>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Filter</label>
                    <select class="form-select" value="@_filter" @onchange="OnFilterChanged">
                        <option value="@OrgActionFilter.Upcoming">Upcoming</option>
                        <option value="@OrgActionFilter.Past">Past</option>
                        <option value="@OrgActionFilter.All">All</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select class="form-select" value="@_statusFilter" @onchange="OnStatusChanged">
                        <option value="@StatusFilter.All">All</option>
                        <option value="@StatusFilter.Published">Published</option>
                        <option value="@StatusFilter.Draft">Draft</option>
                    </select>
                </div>

                <div class="col-md-4 d-flex justify-content-end gap-2">
                    <a class="btn btn-primary" href="org/actions/new">Nova akcija</a>
                    <button class="btn btn-outline-primary" @onclick="Reload">Osvježi</button>
                </div>
            </div>

            <div class="text-muted small mt-3">
                Ukupno: <b>@_rows.Count</b>
            </div>
        </div>
    </div>

    @if (_rows.Count == 0)
    {
        <div class="alert alert-secondary">Nema akcija za odabrani filter.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm table-striped align-middle">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>Početak</th>
                        <th>Status</th>
                        <th class="text-center">Pending</th>
                        <th class="text-end">Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in _rows)
                    {
                        <tr class="@GetActionRowClass(a.StartDateTime, a.EndDateTime)">
                            <td>
                                <div class="fw-semibold">@a.Title</div>
                                <div class="small text-muted">@a.City</div>
                            </td>

                            <td>
                                <div>@a.StartDateTime.ToString("yyyy-MM-dd HH:mm")</div>
                                <div class="small text-muted">@GetWhenText(a.StartDateTime, a.EndDateTime)</div>
                            </td>

                            <td>
                                <span class="badge @StatusBadge(a.Status)">@a.Status</span>
                            </td>

                            <td class="text-center">
                                @if (a.PendingCount > 0)
                                {
                                    <span class="badge bg-warning text-dark">@a.PendingCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>

                            <td class="text-end">
                                <div class="d-inline-flex flex-wrap gap-2 justify-content-end">
                                    <a class="btn btn-sm btn-outline-primary" href="@($"/org/actions/edit/{a.Id}")">Uredi</a>
                                    <a class="btn btn-sm btn-outline-secondary" href="@($"/org/actions/{a.Id}/signups")">Prijave</a>
                                    <a class="btn btn-sm btn-outline-success" href="@($"/actions/{a.Id}")">Public</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@code {
    [CascadingParameter] private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    private bool _loading = true;

    private Organization? _org;

    private OrgActionFilter _filter = OrgActionFilter.Upcoming;
    private StatusFilter _statusFilter = StatusFilter.All;

    private List<Row> _rows = new();

    protected override async Task OnInitializedAsync()
    {
        await Reload();
        _loading = false;
    }

    private async Task OnFilterChanged(ChangeEventArgs e)
    {
        if (Enum.TryParse<OrgActionFilter>(e.Value?.ToString(), out var f))
            _filter = f;

        await Reload();
    }

    private async Task OnStatusChanged(ChangeEventArgs e)
    {
        if (Enum.TryParse<StatusFilter>(e.Value?.ToString(), out var f))
            _statusFilter = f;

        await Reload();
    }

    private async Task Reload()
    {
        var auth = await AuthenticationStateTask;
        var principal = auth.User;

        var me = await UserManager.GetUserAsync(principal);
        if (me is null)
        {
            _rows = new();
            return;
        }

        _org = await OrgService.GetByOwnerUserIdAsync(me.Id);
        if (_org is null)
        {
            _rows = new();
            return;
        }

        var now = DateTime.Now;

        var q = Db.VolunteerActions
            .AsNoTracking()
            .Where(a => a.OrganizationId == _org.Id);

        // filter upcoming/past
        q = _filter switch
        {
            OrgActionFilter.Upcoming => q.Where(a => a.EndDateTime >= now),
            OrgActionFilter.Past => q.Where(a => a.EndDateTime < now),
            _ => q
        };

        // status filter
        q = _statusFilter switch
        {
            StatusFilter.Published => q.Where(a => a.Status == VolunteerActionStatus.Published),
            StatusFilter.Draft => q.Where(a => a.Status == VolunteerActionStatus.Draft),
            _ => q
        };

        // sorting
        q = _filter switch
        {
            OrgActionFilter.Past => q.OrderByDescending(a => a.StartDateTime),
            _ => q.OrderBy(a => a.StartDateTime)
        };

        _rows = await q
            .Select(a => new Row
            {
                Id = a.Id,
                Title = a.Title,
                City = a.City,
                StartDateTime = a.StartDateTime,
                EndDateTime = a.EndDateTime,
                Status = a.Status,

                PendingCount = Db.Signups.Count(s => s.VolunteerActionId == a.Id && s.Status == SignupStatus.Applied)
            })
            .ToListAsync();
    }

    private static string StatusBadge(VolunteerActionStatus st) => st switch
    {
        VolunteerActionStatus.Published => "bg-success",
        VolunteerActionStatus.Draft => "bg-secondary",
        _ => "bg-secondary"
    };

    private static string GetWhenText(DateTime start, DateTime end)
    {
        var now = DateTime.Now;
        if (now >= start && now <= end) return "U tijeku";
        if (start.Date == now.Date) return "Danas";
        if (start.Date == now.Date.AddDays(1)) return "Sutra";

        var days = (start.Date - now.Date).Days;
        if (days > 1 && days <= 14) return $"Za {days} dana";

        if (end < now) return "Prošlo";
        return start.ToString("yyyy-MM-dd");
    }

    private static string GetActionRowClass(DateTime start, DateTime end)
    {
        var now = DateTime.Now;
        if (now >= start && now <= end) return "table-danger";
        if (start.Date == now.Date) return "table-warning";
        if (start <= now.AddDays(2)) return "table-warning";
        return "";
    }

    private enum OrgActionFilter
    {
        Upcoming,
        Past,
        All
    }

    private enum StatusFilter
    {
        All,
        Published,
        Draft
    }

    private class Row
    {
        public int Id { get; set; }
        public string Title { get; set; } = "";
        public string City { get; set; } = "";
        public DateTime StartDateTime { get; set; }
        public DateTime EndDateTime { get; set; }
        public VolunteerActionStatus Status { get; set; }
        public int PendingCount { get; set; }
    }
}
